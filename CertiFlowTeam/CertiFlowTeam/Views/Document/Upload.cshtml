@{
    ViewData["Title"] = "Yeni Doküman Yükle";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Yeni Doküman Yükle</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Document")">Dokümanlar</a></li>
                    <li class="breadcrumb-item active">Yeni Doküman Yükle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Doküman Bilgileri</h4>

                <form id="uploadDocumentForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="documentName" class="form-label">Doküman Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="documentName" name="documentName" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="documentType" class="form-label">Doküman Tipi</label>
                                <select class="form-select" id="documentType" name="documentType">
                                    <option value="">Seçiniz</option>
                                    <option value="Sözleşme">Sözleşme</option>
                                    <option value="Fatura">Fatura</option>
                                    <option value="Teklif">Teklif</option>
                                    <option value="Rapor">Rapor</option>
                                    <option value="Protokol">Protokol</option>
                                    <option value="Form">Form</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="documentNumber" class="form-label">Doküman Numarası</label>
                                <input type="text" class="form-control" id="documentNumber" name="documentNumber" placeholder="Ör: DOC-2024-001">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Açıklama</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Doküman hakkında açıklama giriniz..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="assignedToUserId" class="form-label">Onaylayacak Kişi</label>
                        <select class="form-select" id="assignedToUserId" name="assignedToUserId">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="file" class="form-label">Dosya Seç <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="file" name="file" required>
                        <div class="form-text">İzin verilen formatlar: PDF, DOC, DOCX, XLS, XLSX, JPG, PNG (Maks. 10MB)</div>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <i class="mdi mdi-information-outline me-2"></i>
                        Doküman yüklendikten sonra onay bekleyen dokümanlar listesine eklenecektir.
                    </div>

                    <div class="text-end">
                        <a href="@Url.Action("Index", "Document")" class="btn btn-secondary me-2">İptal</a>
                        <button type="submit" class="btn btn-primary" id="btnUpload">
                            <i class="bx bx-upload me-1"></i> Yükle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/document-upload.js"></script>
}
