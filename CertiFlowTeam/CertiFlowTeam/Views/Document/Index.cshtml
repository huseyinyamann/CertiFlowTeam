@{
    ViewData["Title"] = "Dokümanlar";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Dokümanlar</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Dokümanlar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary filter-btn active" data-filter="all">
                                <i class="bx bx-list-ul font-size-16 align-middle me-1"></i> Tümü
                            </button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="my">
                                <i class="bx bx-user font-size-16 align-middle me-1"></i> Dokümanlarım
                            </button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="company">
                                <i class="bx bx-buildings font-size-16 align-middle me-1"></i> Firma
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="text-sm-end">
                            <a href="@Url.Action("Upload", "Document")" class="btn btn-success btn-rounded waves-effect waves-light mb-2">
                                <i class="mdi mdi-plus me-1"></i> Yeni Doküman Yükle
                            </a>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="documentTable" class="table table-bordered dt-responsive nowrap w-100">
                        <thead class="table-light">
                            <tr>
                                <th>Doküman Adı</th>
                                <th>Tip</th>
                                <th>Numara</th>
                                <th>Yükleyen</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>

                <div id="noDataMessage" class="text-center py-5" style="display: none;">
                    <i class="bx bx-folder-open display-1 text-muted"></i>
                    <h5 class="mt-3">Henüz doküman bulunmamaktadır.</h5>
                    <p class="text-muted">İlk dokümanınızı yükleyerek başlayın.</p>
                    <a href="@Url.Action("Upload", "Document")" class="btn btn-primary mt-2">
                        <i class="mdi mdi-plus me-1"></i> İlk Dokümanı Yükle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="documentDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Doküman Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="documentDetailContent">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dokümanı Reddet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="rejectDocumentId">
                <div class="mb-3">
                    <label for="rejectionReason" class="form-label">Red Nedeni <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="rejectionReason" rows="3" placeholder="Lütfen red nedenini açıklayınız..." required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" onclick="confirmReject()">Reddet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />

    <script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

    <script src="~/js/document-list.js"></script>
}
