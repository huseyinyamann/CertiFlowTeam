@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card overflow-hidden">
            <div class="bg-primary bg-soft">
                <div class="row">
                    <div class="col-7">
                        <div class="text-primary p-4">
                            <h5 class="text-primary">Tekrar Hoş Geldiniz!</h5>
                            <p>Devam etmek için giriş yapın.</p>
                        </div>
                    </div>
                    <div class="col-5 align-self-end">
                        <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="p-2">
                    <div class="alert alert-success alert-dismissible fade show d-none" role="alert" id="successAlert">
                        <i class="mdi mdi-check-all me-2"></i>
                        <span id="successMessage"></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <div class="alert alert-danger alert-dismissible fade show d-none" role="alert" id="errorAlert">
                        <i class="mdi mdi-block-helper me-2"></i>
                        <span id="errorMessage"></span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <form class="needs-validation" id="loginForm" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email adresinizi giriniz" required>
                            <div class="invalid-feedback">
                                Lütfen geçerli bir email adresi giriniz.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şifre</label>
                            <div class="input-group auth-pass-inputgroup">
                                <input type="password" class="form-control" id="password" placeholder="Şifrenizi giriniz" required>
                                <button class="btn btn-light" type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                                <div class="invalid-feedback">
                                    Lütfen şifrenizi giriniz.
                                </div>
                            </div>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Beni Hatırla
                            </label>
                        </div>

                        <div class="mt-3 d-grid">
                            <button class="btn btn-primary waves-effect waves-light" type="submit" id="loginBtn">
                                <i class="mdi mdi-login me-1"></i> Giriş Yap
                            </button>
                        </div>

                        <div class="mt-4 text-center">
                            <a href="#" class="text-muted"><i class="mdi mdi-lock me-1"></i> Şifrenizi mi unuttunuz?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="mt-5 text-center">
            <div>
                <p>Hesabınız yok mu? <a href="@Url.Action("Register", "Auth")" class="fw-medium text-primary">Kayıt Ol</a></p>
                <p>© @DateTime.Now.Year CertiFlow Team</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth/login.js"></script>
}
